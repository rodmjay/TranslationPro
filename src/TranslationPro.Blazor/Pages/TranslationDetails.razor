@page "/applications/{ApplicationId:guid}/phrases/{PhraseId:int}/languages/{LanguageId}"
@inherits TranslationDetailsBase
@layout MainLayout

@if (ApplicationPhrase != null)
{
    
    <Bar>
        <BarStart>
            <ApplicationBreadcrumb NavigationItems="@NavigationItems"></ApplicationBreadcrumb>
        </BarStart>
        <BarEnd>
            <Buttons>
                <Button Color="Color.Secondary" Type="ButtonType.Link" To=@($"/applications/{ApplicationId}/create-phrase")>Create Phrase</Button>
               
            </Buttons>
        </BarEnd>
    </Bar>
    
    <Row HorizontalGutter="16" VerticalGutter="32">
        <Column ColumnSize="ColumnSize.Is12">
            <VariantList ApplicationId="@ApplicationId" PhraseId="@PhraseId" LanguageId="@LanguageId"></VariantList>
        </Column>
    </Row>
}

