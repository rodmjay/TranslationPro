
<Card Background="Background.Secondary" WhiteText>
    <CardBody>
        <CardTitle >
            <Heading Size="HeadingSize.Is5">@Language</Heading>
        </CardTitle>
        <CardText>
            <Heading Size="HeadingSize.Is4">@Text</Heading>
        </CardText>
    </CardBody>

</Card>

@code {
    [Parameter]
    public string Language { get; set; }

    [Parameter]
    public string Text { get; set; }
}
