
<DataGrid TItem="ApplicationOutput"
          Data="Apps"
          RowClicked="HandleRowClicked">

    <DataGridColumns>
        <DataGridColumn Field="@nameof(ApplicationOutput.Name)" Caption="Name"></DataGridColumn>
        <DataGridColumn Field="@nameof(ApplicationOutput.PhraseCount)" Caption="Phrases"></DataGridColumn>
        <DataGridColumn Field="@nameof(ApplicationOutput.LanguageCount)" Caption="Languages"></DataGridColumn>
        <DataGridColumn Field="@nameof(ApplicationOutput.TranslationCount)" Caption="Translations"></DataGridColumn>
        <DataGridColumn Field="@nameof(ApplicationOutput.BlankTranslationCount)" Caption="Pending Translations"></DataGridColumn>
    </DataGridColumns>
</DataGrid>
