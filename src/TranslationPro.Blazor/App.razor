<Blazorise.ThemeProvider Theme="@theme">
    <CascadingAuthenticationState>
        
        <CascadingValue TValue="IEventAggregator" Value="@EventAggregator">
            <Router AppAssembly="@typeof(App).Assembly">
                <Found Context="routeData">
                    <CascadingValue Value="@routeData">

                        <CascadingValue Value="@ApplicationProxy">

                            <RouteView RouteData="@routeData" DefaultLayout="@typeof(Layouts.PublicLayout)" />
                            <FocusOnNavigate RouteData="@routeData" Selector="h1" />

                        </CascadingValue>

                    </CascadingValue>
                </Found>
                <NotFound>
                    <PageTitle>Not found</PageTitle>
                    <LayoutView Layout="@typeof(Layouts.PublicLayout)">
                        <p role="alert">Sorry, there's nothing at this address.</p>
                    </LayoutView>
                </NotFound>
            </Router>
        </CascadingValue>
        

    </CascadingAuthenticationState>
</Blazorise.ThemeProvider>
